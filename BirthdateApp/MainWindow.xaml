<Window x:Class="BirthdateApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BirthdateApp"
        mc:Ignorable="d"
        Title="BirthDate App" Height="450" Width="450">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select your birthdate:" FontSize="14" />
            <DatePicker SelectedDate="{Binding BirthDate}" />

            <TextBlock Text="Your age:" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Age}" FontSize="16" FontWeight="Bold" />

            <TextBlock Text="Western Zodiac Sign:" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding WesternZodiac}" FontSize="16" FontWeight="Bold" />

            <TextBlock Text="Chinese Zodiac Sign:" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding ChineseZodiac}" FontSize="16" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
